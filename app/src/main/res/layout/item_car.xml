<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_gridCars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardMaxElevation="15dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/color_one"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_item_car"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:padding="1dp"
                    android:background="@color/white"
                    android:contentDescription="@+id/name_item_car"
                    android:scaleType="centerCrop"
                    android:src="@drawable/select_photo" />

                <TextView
                    android:id="@+id/status_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/spk_process"
                    android:textSize="24sp"
                    android:gravity="center_vertical"
                    android:background="#4D000000"
                    android:textColor="@color/teal_700"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <TextView
                android:id="@+id/name_item_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:text="@string/contoh_nama_mobil" />

            <TextView
                android:id="@+id/price_item_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:text="@string/contoh_harga_mobil" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>